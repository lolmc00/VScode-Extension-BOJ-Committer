{
	"name": "boj-committer",
	"displayName": "BOJ Committer",
	"description": "",
    "version": "0.0.1",
    "publisher": "lolmc00",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.BOJCommitter"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.BOJCommitter",
				"title": "[BOJ Committer] Commit My source"
			}
        ],
        "keybindings": [
            {
                "command": "extension.BOJCommitter",
                "key": "ctrl+alt+G",
                "mac": "shift+cmd+G"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/cheerio": "^0.22.17",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/request": "^2.48.4",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"extensionDependencies": [
		"vscode.git"
	],
	"dependencies": {
		"cheerio": "^1.0.0-rc.3",
		"request": "^2.88.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lolmc00/VScode-Extension-BOJ-Committer"
    }
}
